<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.intentservice.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/addTaskSingleBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="addTask"
            android:text="intentService单任务"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/addTaskMultipleBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTaskSingleBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="addTask"
            android:text="intentService多任务"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handlerThreadBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTaskMultipleBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="addTask"
            android:text="HandlerThread任务"
            android:textAllCaps="false" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
